{
  "version": 2,
  "builds": [
    {"src": "api/book/[id].js", "use": "@vercel/node"},
    {"src": "public/*", "use": "@vercel/static"},
    {"src": "*.html", "use": "@vercel/static"}
  ],
  "routes": [
    {
      "src": "/book/([0-9]+)",
      "dest": "/api/book/[id]"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 