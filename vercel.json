{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.json",
      "use": "@vercel/static"
    },
    {
      "src": "js/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "css/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "api/book/[id].js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/book/([0-9]+)",
      "dest": "/api/book/[id]"
    },
    {
      "src": "/books.json",
      "dest": "/books.json",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}